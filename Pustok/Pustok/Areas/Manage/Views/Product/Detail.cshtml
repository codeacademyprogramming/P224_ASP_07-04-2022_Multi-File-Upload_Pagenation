@model Product
@{
    ViewData["Title"] = "Detail";
}

<div class="row">
    <div class="col-lg-12">
        <h1>Product Detail</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/image/products/@Model.MainImage" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <h5 class="card-title">@Model.Price</h5>
                <h5 class="card-title">@Model.DiscountPrice</h5>
                <h5 class="card-title">@(Model.AuthorId != null ? Model.Author.Name: "")</h5>
                <h5 class="card-title">@(Model.GenreId != null ? Model.Genre.Name: "")</h5>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <a class="btn btn-primary" asp-action="Index">Go To List</a>
    </div>
</div>