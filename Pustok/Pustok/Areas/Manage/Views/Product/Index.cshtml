@model IEnumerable<Product>
@{
    int count = (ViewBag.CurentPage - 1)*5;
}
<div class="row">
    <div class="col-lg-10">
        <h1>Product Table</h1>
    </div>
    <div class="col-lg-2">
        <a class="btn btn-primary" asp-action="Create">Create Product</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Discount Price</th>
                    <th>Settings</th>
                </tr>
            </thead>
            <tbody id="ProductTable">
                @foreach (Product product in Model)
                {
                    count++;
                    <tr>
                        <th>@count</th>
                        <td>@product.Title</td>
                        <td>@product.Price</td>
                        <td>@product.DiscountPrice</td>
                        <td>
                            <a asp-action="Detail" asp-route-id="@product.Id" class="btn btn-success">Detail</a>
                            <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning">Update</a>
                            <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger" id="deletefilesweet">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-12">
        <nav aria-label="Page navigation example">
            <ul class="pagination">


                @if (ViewBag.CurentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="1" aria-label="Previous">
                            <span aria-hidden="true">@("<<")</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurentPage - 1)" aria-label="Previous">
                            <span aria-hidden="true">@("<")</span>
                        </a>
                    </li>
                }

                @if (ViewBag.CurentPage > 1)
                {
                    <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurentPage-1)">@(ViewBag.CurentPage-1)</a></li>
                }
                <li class="page-item active"><a class="page-link "  asp-action="Index" asp-route-page="@ViewBag.CurentPage">@ViewBag.CurentPage</a></li>
                @if (ViewBag.CurentPage < ViewBag.PageCount)
                {
                    <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurentPage+1)">@(ViewBag.CurentPage+1)</a></li>
                }

                @if (ViewBag.PageCount > ViewBag.CurentPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurentPage + 1)" aria-label="Previous">
                            <span aria-hidden="true">></span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@ViewBag.PageCount" aria-label="Previous">
                            <span aria-hidden="true">>></span>
                        </a>
                    </li>
                }
            </ul>
        </nav>

    </div>
</div>